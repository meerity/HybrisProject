<items xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="items.xsd">
	<itemtypes>
		<!--SmartEdit task 1-->
		<itemtype code="ArticleComponent" extends="SimpleCMSComponent"
		jaloclass="com.epam.training.jalo.ArticleComponent">
			<attributes>
				<attribute qualifier="image" type="Media">
					<modifiers read="true" write="true"/>
					<persistence type="property"/>
				</attribute>
				<attribute qualifier="text" type="java.lang.String">
					<modifiers read="true" write="true"/>
					<persistence type="property"/>
					<description>Text content that will flow around the image</description>
				</attribute>
			</attributes>
		</itemtype>
	</itemtypes>
</items>
